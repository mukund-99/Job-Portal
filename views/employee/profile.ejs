<!-- <!DOCTYPE html>
<html lang="en"> -->
    <%- include('navbar.ejs') %>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #2563eb;
            --primary-light: #3b82f6;
            --secondary: #f59e0b;
            --dark: #1e293b;
            --light: #f8fafc;
            --gray: #64748b;
            --success: #10b981;
        }
        
        body {
            /* background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            /* padding: 20px; */
        }
        
        .profile-container {
            max-width: 1200px;
            margin-left: 20%;
            /* margin: 0 20%; */
        }
        
        .profile-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            overflow: hidden;
        }
        
        .profile-header {
            /* background-color: #7a919f; */
            background-image: url('https://www.shutterstock.com/image-illustration/blue-modern-futurist-technology-linkedin-260nw-2372954885.jpg');
            /* background-repeat: no-repeat; */
            background-size: cover;

            /* background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%); */
            color: white;
            padding: 30px;
            text-align: center;
        }
        
        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 4px solid white;
            object-fit: cover;
            margin-bottom: 15px;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .profile-avatar:hover {
            transform: scale(1.05);
        }
        
        .photo-upload-area {
            border: 2px dashed #dee2e6;
            border-radius: 15px;
            padding: 30px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
            margin-bottom: 20px;
        }
        
        .photo-upload-area:hover {
            border-color: var(--primary);
            background-color: rgba(37, 99, 235, 0.05);
        }
        
        .upload-icon {
            font-size: 3rem;
            color: var(--gray);
            margin-bottom: 15px;
        }
        
        .section-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid var(--primary);
        }
        
        .form-control, .form-select {
            border-radius: 10px;
            padding: 12px 15px;
            border: 1px solid #dee2e6;
            transition: all 0.3s;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.2rem rgba(37, 99, 235, 0.25);
        }
        
        .skill-tag {
            background: #e0f2fe;
            color: var(--primary);
            padding: 6px 12px;
            border-radius: 20px;
            margin: 4px;
            display: inline-block;
            font-size: 0.9rem;
        }
        
        .skill-tag i {
            margin-left: 5px;
            cursor: pointer;
        }
        
        .education-item, .experience-item, .project-item {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 15px;
            border-left: 4px solid var(--primary);
            position: relative;
        }
        
        .delete-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background: #dc3545;
            color: white;
            border: none;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }
        
        .action-btn {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s;
        }
        
        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(37, 99, 235, 0.4);
        }
        
        .btn-outline-custom {
            border: 2px solid var(--primary);
            color: var(--primary);
            padding: 12px 30px;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s;
        }
        
        .btn-outline-custom:hover {
            background: var(--primary);
            color: white;
        }
        
        .nav-pills .nav-link {
            color: var(--dark);
            padding: 12px 20px;
            border-radius: 10px;
            margin-bottom: 5px;
            font-weight: 500;
            transition: all 0.3s;
        }
        
        .nav-pills .nav-link.active {
            background: var(--primary);
            color: white;
        }
        
        .nav-pills .nav-link i {
            width: 20px;
            margin-right: 10px;
        }
        
        .required::after {
            content: "*";
            color: #dc2626;
            margin-left: 4px;
        }
        
        .tab-pane {
            animation: fadeIn 0.5s ease-in;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .profile-info-display {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 15px;
            border-left: 4px solid var(--primary);
        }
        
        .info-label {
            font-weight: 600;
            color: var(--gray);
            margin-bottom: 5px;
        }
        
        .info-value {
            font-size: 1.1rem;
            color: var(--dark);
        }
        
        .profile-completion {
            background: white;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        
        .progress {
            height: 10px;
            margin-top: 10px;
        }
        
        .document-item {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .document-info {
            flex: 1;
        }
        
        .document-actions {
            display: flex;
            gap: 10px;
        }
        
        .empty-state {
            text-align: center;
            padding: 40px 20px;
            color: var(--gray);
        }
        
        .empty-state i {
            font-size: 3rem;
            margin-bottom: 15px;
            color: #dee2e6;
        }
    </style>
</head>
<body>
    <div class="profile-container">
        <div class="profile-card">
            <!-- Profile Header -->
            <div class="profile-header profile-card shadow-lg mb-2 mt-2">
                <div class="photo-preview-container text-center">
                    <img id="profilePreview" 
                         src="<%= (employee[0].profile_photo) ? employee[0].profile_photo : 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTNzXYh-X4wxX1jfbPywa8HWoNGDnx1Tlo0-g&s' %>" 
                         alt="Profile" 
                         class="profile-avatar"
                         onclick="document.getElementById('profilePhotoInput').click()">
                    <h4 class="mt-3" id="studentNameDisplay"><%= employee[0].employee_name || 'Student Name' %></h4>
                    <p class="mb-0" id="studentMajorDisplay"><%= employee[0].current_designation || 'Student' %></p>
                    <!-- <p class="mb-0" id="studentIdDisplay">ID: <%= employee[0].employee_id || 'N/A' %></p> -->
                    <input type="hidden" id="studentIdInput" value="<%= employee[0].employee_id || 'N/A' %>" readonly>
                </div>
            </div>

            <div class="row">
                <!-- Left Navigation -->
                <div class="col-lg-3 border-end">
                    <div class="p-4">
                        <!-- Profile Completion -->
                        <div class="profile-completion mt-3">
                            <h6 class="mb-2">Profile Completion</h6>
                            <div class="progress">
                                <div class="progress-bar bg-success" role="progressbar" 
                                     style="width: <%= profileCompletePercent %>%" 
                                     aria-valuenow="<%= profileCompletePercent %>" 
                                     aria-valuemin="0" aria-valuemax="100">
                                </div>
                            </div>
                            <small class="text-muted"><%= profileCompletePercent %>% Complete</small>
                        </div>
                        
                        <ul class="nav nav-pills flex-column">
                            <li class="nav-item">
                                <a class="nav-link active" data-bs-toggle="pill" href="#personal">
                                    <i class="fas fa-user"></i> Personal Info
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="pill" href="#education">
                                    <i class="fas fa-graduation-cap"></i> Education
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="pill" href="#skills">
                                    <i class="fas fa-laptop-code"></i> Skills
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="pill" href="#projects">
                                    <i class="fas fa-project-diagram"></i> Projects
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="pill" href="#experience">
                                    <i class="fas fa-briefcase"></i> Experience
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="pill" href="#documents">
                                    <i class="fas fa-file-alt"></i> Documents
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Right Content -->
                <div class="col-lg-9">
                    <div class="p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4 mt-3">
                            <h3 class="mb-0">Student Profile</h3>
                            <button class="action-btn" id="toggleEditBtn">
                                <i class="fas fa-edit me-2"></i>Edit Profile
                            </button>
                        </div>
                        
                        <div class="alert alert-success alert-dismissible fade show" role="alert" id="successAlert" style="display: none;">
                            Profile updated successfully!
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                        
                        <form id="profileForm" action="/employee/save_profile" method="POST" enctype="multipart/form-data" >
                            <!-- Hidden inputs for dynamic data -->
                            <input type="hidden" name="projects_data" id="projectsDataInput" value="">
                            <input type="hidden" name="experience_data" id="experienceDataInput" value="">
                            <input type="hidden" name="skills" id="skillsInput" value="<%= employee[0].skills ? employee[0].skills.join(',') : '' %>">
                            
                            <div class="tab-content">
                                <!-- Personal Information Tab -->
                                <div class="tab-pane fade show active" id="personal">
                                    <h4 class="section-title">Personal Information</h4>
                                    
                                    <!-- Profile View Mode -->
                                    <div id="personalView">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <div class="profile-info-display">
                                                    <div class="info-label">Full Name</div>
                                                    <div class="info-value" id="viewFullName"><%= employee[0].employee_name || 'Not provided' %></div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <div class="profile-info-display">
                                                    <div class="info-label">Designation</div>
                                                    <div class="info-value" id="viewDesignation"><%= employee[0].current_designation || 'Not provided' %></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <div class="profile-info-display">
                                                    <div class="info-label">Email</div>
                                                    <div class="info-value" id="viewEmail"><%= employee[0].employee_email || 'Not provided' %></div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <div class="profile-info-display">
                                                    <div class="info-label">Phone</div>
                                                    <div class="info-value" id="viewPhone"><%= employee[0].employee_mobile || 'Not provided' %></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <div class="profile-info-display">
                                                    <div class="info-label">Date of Birth</div>
                                                    <div class="info-value" id="viewDob">
                                                        <% if (employee[0].employee_dob) { %>
                                                            <%= new Date(employee[0].employee_dob).toLocaleDateString() %>
                                                        <% } else { %>
                                                            Not provided
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <div class="profile-info-display">
                                                    <div class="info-label">Gender</div>
                                                    <div class="info-value" id="viewGender"><%= employee[0].gender || 'Not provided' %></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 mb-3">
                                                <div class="profile-info-display">
                                                    <div class="info-label">Address</div>
                                                    <div class="info-value" id="viewAddress"><%= employee[0].employee_address || 'Not provided' %></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 mb-3">
                                                <div class="profile-info-display">
                                                    <div class="info-label">Bio/Summary</div>
                                                    <div class="info-value" id="viewBio"><%= employee[0].summary || 'Not provided' %></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- Profile Edit Mode -->
                                    <div id="personalEdit" style="display: none;">
                                        <div class="photo-upload-area" onclick="document.getElementById('profilePhotoInput').click()">
                                            <div class="upload-icon">
                                                <i class="fas fa-camera"></i>
                                            </div>
                                            <h5>Change Profile Photo</h5>
                                            <p class="text-muted mb-0">Click to upload a new profile photo (JPG, PNG, Max 2MB)</p>
                                            <input type="file" name="profile_photo" class="d-none" id="profilePhotoInput" accept="image/*" onchange="previewImage(this)">
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label required">Full Name</label>
                                                <input type="text" name="employee_name" class="form-control" value="<%= employee[0].employee_name || '' %>" required>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label">Designation</label>
                                                <input type="text" name="current_designation" class="form-control" value="<%= employee[0].current_designation || '' %>" placeholder="e.g., Software Developer, Intern">
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label required">Email</label>
                                                <input type="email" name="employee_email" class="form-control" value="<%= employee[0].employee_email || '' %>" required>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label">Phone</label>
                                                <input type="tel" name="employee_mobile" class="form-control" value="<%= employee[0].employee_mobile || '' %>">
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label">Date of Birth</label>
                                                <input type="date" name="employee_dob" class="form-control" 
                                                       value="<%= employee[0].employee_dob ? new Date(employee[0].employee_dob).toISOString().split('T')[0] : '' %>">
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label">Gender</label>
                                                <select name="gender" class="form-select">
                                                    <option value="">Select Gender</option>
                                                    <option value="Male" <%= employee[0].gender === 'Male' ? 'selected' : '' %>>Male</option>
                                                    <option value="Female" <%= employee[0].gender === 'Female' ? 'selected' : '' %>>Female</option>
                                                    <option value="Other" <%= employee[0].gender === 'Other' ? 'selected' : '' %>>Other</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-12 mb-3">
                                                <label class="form-label">Address</label>
                                                <textarea name="employee_address" class="form-control" rows="3" placeholder="Enter your complete address"><%= employee[0].employee_address || '' %></textarea>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-12 mb-3">
                                                <label class="form-label">Pincode</label>
                                                <input type="text" name="employee_pincode" class="form-control" value="<%= employee[0].employee_pincode || '' %>">
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Bio/Summary</label>
                                            <textarea name="summary" class="form-control" rows="4" placeholder="Write a brief introduction about yourself..."><%= employee[0].summary || '' %></textarea>
                                        </div>
                                    </div>
                                </div>

                                <!-- Education Tab -->
                                <div class="tab-pane fade" id="education">
                                    <h4 class="section-title">Education Details</h4>
                                    
                                    <!-- Education View Mode -->
                                    <div id="educationView">
                                        <% if (employee[0].education && employee[0].education.degree) { %>
                                            <div class="education-item">
                                                <h5><%= employee[0].education.degree %></h5>
                                                <p class="mb-1"><strong>Institution:</strong> <%= employee[0].education.institution || 'Not provided' %></p>
                                                <p class="mb-1"><strong>Field of Study:</strong> <%= employee[0].education.field_of_study || 'Not provided' %></p>
                                                <p class="mb-1"><strong>CGPA/Percentage:</strong> <%= employee[0].education.cgpa_percentage || 'Not provided' %></p>
                                                <p class="mb-1">
                                                    <strong>Duration:</strong> 
                                                    <% if (employee[0].education.start_date) { %>
                                                        <%= new Date(employee[0].education.start_date).toLocaleDateString() %>
                                                    <% } else { %>
                                                        Start date not provided
                                                    <% } %>
                                                    - 
                                                    <% if (employee[0].education.end_date) { %>
                                                        <%= new Date(employee[0].education.end_date).toLocaleDateString() %>
                                                    <% } else { %>
                                                        End date not provided
                                                    <% } %>
                                                </p>
                                                <p class="mb-0"><strong>Description:</strong> <%= employee[0].education.education_description || 'No description provided' %></p>
                                            </div>
                                        <% } else { %>
                                            <div class="empty-state">
                                                <i class="fas fa-graduation-cap"></i>
                                                <h5>No Education Added</h5>
                                                <p class="text-muted">Add your educational background to showcase your qualifications.</p>
                                            </div>
                                        <% } %>
                                    </div>
                                    
                                    <!-- Education Edit Mode -->
                                    <div id="educationEdit" style="display: none;">
                                        <div class="education-item">
                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label required">Degree</label>
                                                    <input type="text" name="degree" class="form-control" 
                                                           value="<%= employee[0].education ? employee[0].education.degree : '' %>" required>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label">Field of Study</label>
                                                    <input type="text" name="field_of_study" class="form-control" 
                                                           value="<%= employee[0].education ? employee[0].education.field_of_study : '' %>">
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label required">Institution</label>
                                                    <input type="text" name="institution" class="form-control" 
                                                           value="<%= employee[0].education ? employee[0].education.institution : '' %>" required>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label">CGPA/Percentage</label>
                                                    <input type="text" name="cgpa" class="form-control" 
                                                           value="<%= employee[0].education ? employee[0].education.cgpa_percentage : '' %>">
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label">Start Date</label>
                                                    <input type="date" name="education_start" class="form-control"
                                                           value="<%= employee[0].education && employee[0].education.start_date 
                                                                   ? new Date(employee[0].education.start_date).toISOString().split('T')[0] 
                                                                   : '' %>">
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label">End Date</label>
                                                    <input type="date" name="education_end" class="form-control"
                                                           value="<%= employee[0].education && employee[0].education.end_date 
                                                                   ? new Date(employee[0].education.end_date).toISOString().split('T')[0] 
                                                                   : '' %>">
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Description</label>
                                                <textarea name="education_description" class="form-control" rows="3"><%= employee[0].education ? employee[0].education.education_description : '' %></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Skills Tab -->
                                <div class="tab-pane fade" id="skills">
                                    <h4 class="section-title">Technical Skills</h4>
                                    
                                    <!-- Skills View Mode -->
                                    <div id="skillsView">
                                        <% if (employee[0].skills && employee[0].skills.length > 0) { %>
                                            <div class="mb-3">
                                                <div class="info-label mb-2">Skills</div>
                                                <div>
                                                    <% for (let i = 0; i < employee[0].skills.length; i++) { %>
                                                        <span class="skill-tag"><%= employee[0].skills[i] %></span>
                                                    <% } %>
                                                </div>
                                            </div>
                                        <% } else { %>
                                            <div class="empty-state">
                                                <i class="fas fa-laptop-code"></i>
                                                <h5>No Skills Added</h5>
                                                <p class="text-muted">Add your technical skills to showcase your expertise.</p>
                                            </div>
                                        <% } %>
                                    </div>
                                    
                                    <!-- Skills Edit Mode -->
                                    <div id="skillsEdit" style="display: none;">
                                        <div class="mb-3">
                                            <label class="form-label">Skills</label>
                                            <div id="programmingSkills" class="mb-3">
                                                <% if (employee[0].skills && employee[0].skills.length > 0) { %>
                                                    <% for (let i = 0; i < employee[0].skills.length; i++) { %>
                                                        <span class="skill-tag">
                                                            <%= employee[0].skills[i] %> 
                                                            <i class="fas fa-times" onclick="removeSkill(this)"></i>
                                                        </span>
                                                    <% } %>
                                                <% } %>
                                            </div>
                                            <div class="input-group">
                                                <input type="text" class="form-control" id="newProgrammingSkill" placeholder="Add a skill">
                                                <button class="btn btn-primary" type="button" onclick="addSkill()">
                                                    <i class="fas fa-plus"></i> Add
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Projects Tab -->
                                <div class="tab-pane fade" id="projects">
                                    <h4 class="section-title">Projects</h4>
                                    
                                    <!-- Projects View Mode -->
                                    <div id="projectsView">
                                        <div id="projectsListView">
                                            <% if (employee[0].projects && employee[0].projects.length > 0) { %>
                                                <% employee[0].projects.forEach(function(project) { %>
                                                    <div class="project-item">
