    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Initialize data from backend
        let projects = <%- JSON.stringify(employee[0].projects || []) %>;
        let experience = <%- JSON.stringify(employee[0].experience || []) %>;

        // Toggle between view and edit modes
        const toggleEditBtn = document.getElementById('toggleEditBtn');
        const cancelEditBtn = document.getElementById('cancelEditBtn');
        const formActions = document.getElementById('formActions');
        const successAlert = document.getElementById('successAlert');
        
        // View and edit elements for each tab
        const viewElements = document.querySelectorAll('[id$="View"]');
        const editElements = document.querySelectorAll('[id$="Edit"]');
        
        toggleEditBtn.addEventListener('click', function() {
            // Switch to edit mode
            toggleEditBtn.style.display = 'none';
            formActions.style.display = 'block';
            
            // Hide all view elements and show edit elements
            viewElements.forEach(el => el.style.display = 'none');
            editElements.forEach(el => el.style.display = 'block');
            
            // Initialize dynamic forms
            initializeProjectsEdit();
            initializeExperienceEdit();
        });
        
        cancelEditBtn.addEventListener('click', function() {
            // Switch back to view mode
            toggleEditBtn.style.display = 'block';
            formActions.style.display = 'none';
            
            // Hide all edit elements and show view elements
            viewElements.forEach(el => el.style.display = 'block');
            editElements.forEach(el => el.style.display = 'none');
        });
        
        // Profile photo preview
        function previewImage(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('profilePreview').src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Skills management
        function addSkill() {
            const input = document.getElementById('newProgrammingSkill');
            const skill = input.value.trim();
            if(skill === '') return;

            const container = document.getElementById('programmingSkills');

            // Create new skill tag
            const span = document.createElement('span');
            span.className = 'skill-tag';
            span.innerHTML = skill + ' <i class="fas fa-times" onclick="removeSkill(this)"></i>';
            container.appendChild(span);

            input.value = '';
            updateSkillsInput();
        }

        function removeSkill(elem) {
            elem.parentElement.remove();
            updateSkillsInput();
        }

        function updateSkillsInput() {
            const container = document.getElementById('programmingSkills');
            const skills = Array.from(container.getElementsByClassName('skill-tag'))
                                .map(span => span.childNodes[0].nodeValue.trim());
            document.getElementById('skillsInput').value = skills.join(',');
        }

        // Projects Management
        function initializeProjectsEdit() {
            const container = document.getElementById('projectsEditContainer');
            // Forms are already rendered from backend, just update data
            updateProjectsData();
        }

        function addProjectForm() {
            const container = document.getElementById('projectsEditContainer');
            const projectId = Date.now();
            
            const projectForm = document.createElement('div');
            projectForm.className = 'project-item';
            projectForm.innerHTML = `
                <button type="button" class="delete-btn" onclick="removeProjectForm(this, ${projectId})">
                    <i class="fas fa-times"></i>
                </button>
                <div class="mb-3">
                    <label class="form-label required">Project Title</label>
                    <input type="text" class="form-control project-title" value="" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Project Description</label>
                    <textarea class="form-control project-description" rows="3"></textarea>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Technologies Used</label>
                        <input type="text" class="form-control project-technologies" value="">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">GitHub Link</label>
                        <input type="url" class="form-control project-github" value="">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Start Date</label>
                        <input type="date" class="form-control project-start" value="">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">End Date</label>
                        <input type="date" class="form-control project-end" value="">
                    </div>
                </div>
            `;
            
            // Add event listeners to update data on change
            const inputs = projectForm.querySelectorAll('input, textarea');
            inputs.forEach(input => {
                input.addEventListener('change', updateProjectsData);
            });
            
            container.appendChild(projectForm);
            
            projects.push({
                project_id: projectId,
                project_title: '',
                project_description: '',
                technologies_used: '',
                github_link: '',
                start_date: '',
                end_date: ''
            });
            
            updateProjectsData();
        }

        function removeProjectForm(button, projectId) {
            const projectForm = button.closest('.project-item');
            projectForm.remove();
            
            // Remove from projects array
            projects = projects.filter(project => project.project_id !== projectId);
            updateProjectsData();
        }

        function updateProjectsData() {
            const projectForms = document.querySelectorAll('#projectsEditContainer .project-item');
            const projectsData = [];
            
            projectForms.forEach((form, index) => {
                const project = {
                    project_id: projects[index]?.project_id || Date.now(),
                    project_title: form.querySelector('.project-title').value,
                    project_description: form.querySelector('.project-description').value,
                    technologies_used: form.querySelector('.project-technologies').value,
                    github_link: form.querySelector('.project-github').value,
                    start_date: form.querySelector('.project-start').value,
                    end_date: form.querySelector('.project-end').value
                };
                projectsData.push(project);
            });
            
            document.getElementById('projectsDataInput').value = JSON.stringify(projectsData);
        }

        // Experience Management
        function initializeExperienceEdit() {
            const container = document.getElementById('experienceEditContainer');
            // Forms are already rendered from backend, just update data
            updateExperienceData();
        }

        function addExperienceForm() {
            const container = document.getElementById('experienceEditContainer');
            const expId = Date.now();
            
            const expForm = document.createElement('div');
            expForm.className = 'experience-item';
            expForm.innerHTML = `
                <button type="button" class="delete-btn" onclick="removeExperienceForm(this, ${expId})">
                    <i class="fas fa-times"></i>
                </button>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Position</label>
                        <input type="text" class="form-control experience-position" value="">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Company</label>
                        <input type="text" class="form-control experience-company" value="">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Start Date</label>
                        <input type="date" class="form-control experience-start" value="">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">End Date</label>
                        <input type="date" class="form-control experience-end" value="">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea class="form-control experience-description" rows="3"></textarea>
                </div>
            `;
            
            // Add event listeners to update data on change
            const inputs = expForm.querySelectorAll('input, textarea');
            inputs.forEach(input => {
                input.addEventListener('change', updateExperienceData);
            });
            
            container.appendChild(expForm);
            
            experience.push({
                experience_id: expId,
                position: '',
                company: '',
                start_date: '',
                end_date: '',
                description: ''
            });
            
            updateExperienceData();
        }

        function removeExperienceForm(button, expId) {
            const expForm = button.closest('.experience-item');
            expForm.remove();
            
            // Remove from experience array
            experience = experience.filter(exp => exp.experience_id !== expId);
            updateExperienceData();
        }

        function updateExperienceData() {
            const expForms = document.querySelectorAll('#experienceEditContainer .experience-item');
            const experienceData = [];
            
            expForms.forEach((form, index) => {
                const exp = {
                    experience_id: experience[index]?.experience_id || Date.now(),
                    position: form.querySelector('.experience-position').value,
                    company: form.querySelector('.experience-company').value,
                    start_date: form.querySelector('.experience-start').value,
                    end_date: form.querySelector('.experience-end').value,
                    description: form.querySelector('.experience-description').value
                };
                experienceData.push(exp);
            });
            
            document.getElementById('experienceDataInput').value = JSON.stringify(experienceData);
        }

        // Enter key for adding skills
        document.getElementById('newProgrammingSkill').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                addSkill();
            }
        });

        // Form validation and submission
        (function() {
            const form = document.getElementById('profileForm');
            const submitBtn = form.querySelector('button[type="submit"]');
            const MAX_PHOTO = 2 * 1024 * 1024; // 2MB
            const MAX_DOC = 5 * 1024 * 1024; // 5MB

            async function handleSubmit(e) {
                e.preventDefault();

                // Update dynamic inputs
                updateProjectsData();
                updateExperienceData();
                updateSkillsInput();

                // Required-field validation
                const requiredFields = form.querySelectorAll('[required]');
                let isValid = true;
                requiredFields.forEach(field => {
                    if (!field.value || !field.value.toString().trim()) {
                        field.classList.add('is-invalid');
                        isValid = false;
                    } else {
                        field.classList.remove('is-invalid');
                    }
                });
                if (!isValid) {
                    alert('Please fill in all required fields marked with *');
                    return;
                }

                // File size checks
                const photoInput = document.getElementById('profilePhotoInput');
                if (photoInput && photoInput.files[0] && photoInput.files[0].size > MAX_PHOTO) {
                    alert('Profile photo must be less than 2MB');
                    return;
                }
                const resume = form.querySelector('input[name="resume"]');
                if (resume && resume.files[0] && resume.files[0].size > MAX_DOC) {
                    alert('Resume must be less than 5MB');
                    return;
                }
                const transcript = form.querySelector('input[name="transcript"]');
                if (transcript && transcript.files[0] && transcript.files[0].size > MAX_DOC) {
                    alert('Transcript must be less than 5MB');
                    return;
                }

                // Disable submit to avoid double submits / premature aborts
                if (submitBtn) submitBtn.disabled = true;

                try {
                    const url = form.getAttribute('action') || window.location.href;
                    const formData = new FormData(form);

                    // Use fetch so browser sets proper multipart boundaries.
                    const res = await fetch(url, {
                        method: 'POST',
                        body: formData,
                        credentials: 'same-origin',
                    });

                    if (!res.ok) {
                        const text = await res.text().catch(() => '');
                        console.error('Upload failed', res.status, text);
                        // Surface server message to user for debugging
                        alert('Failed to save profile. Server returned ' + res.status + (text ? (': ' + text) : ''));
                    } else {
                         // Show success and switch back to view mode
                         const successAlert = document.getElementById('successAlert');
                         if (successAlert) successAlert.style.display = 'block';
                         toggleEditBtn.style.display = 'block';
                         formActions.style.display = 'none';
                         viewElements.forEach(el => el.style.display = 'block');
                         editElements.forEach(el => el.style.display = 'none');
                     }
                } catch (err) {
                    console.error('Submit error', err);
                    alert('An error occurred while submitting the form. Please try again.');
                } finally {
                    if (submitBtn) submitBtn.disabled = false;
                }
            }

            form.addEventListener('submit', handleSubmit);
        })();
    </script>
